# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Git repository (SSH or HTTPS URL)
GIT_REPO_URL=git@github.com:yourusername/yourrepo.git

# Branch to push changes
GIT_BRANCH=main

# Git user config
GIT_USERNAME=Your Name
GIT_EMAIL=your.email@example.com

# The directory in the repo where articles are placed
TARGET_CONTENT_DIR=content/posts

# A general theme or instruction for the daily topic generation
# For example: "Tech industry insights", "Travel destinations", "Health and fitness tips"
# Each day, the script will ask the model to choose a trending topic related to this theme.
TOPIC_PROMPT=Tech industry insights

# Replicate API Token
REPLICATE_API_TOKEN=your_replicate_api_token

# Directory for saving images (relative to project root)
IMAGE_OUTPUT_DIR=public/images/generated
